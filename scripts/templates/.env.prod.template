# Dialtone Production Configuration Template
# This file is used to generate production environment configuration

# Application settings
APP_NAME=Dialtone
APP_VERSION=0.1.0
LOG_LEVEL=INFO

# Paths (will be configured by setup wizard)
OBSIDIAN_VAULT_PATH=__VAULT_PATH__

# Processing limits
MAX_UPLOAD_SIZE=__MAX_UPLOAD_SIZE__
PROCESSING_TIMEOUT=__PROCESSING_TIMEOUT__
MAX_CONCURRENT_REQUESTS=3

# Server settings
API_HOST=0.0.0.0
API_PORT=__API_PORT__
WORKERS=1

# AI Models
WHISPER_MODEL_SIZE=__WHISPER_MODEL__
OLLAMA_MODEL=__OLLAMA_MODEL__
OLLAMA_ENABLED=true

# SSL Configuration
ENABLE_SSL=__ENABLE_SSL__
DOMAIN=__DOMAIN__
EMAIL=__EMAIL__

# Security settings
API_KEY_ENABLED=false
CORS_ORIGINS=["*"]
RATE_LIMIT_ENABLED=true

# Production optimizations
RELOAD=false
DEBUG=false
TESTING=false

# Logging
LOG_FILE=/app/logs/dialtone.log
LOG_ROTATION=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Resource limits
MEMORY_LIMIT=4g
CPU_LIMIT=2.0

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7