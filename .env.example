# Dialtone Configuration Template
# Copy this file to .env and update values

# Application settings
APP_NAME=Dialtone
APP_VERSION=0.1.0
LOG_LEVEL=INFO

# Paths
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Processing limits
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
PROCESSING_TIMEOUT=35     # seconds
MAX_CONCURRENT_REQUESTS=3

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# AI Configuration
WHISPER_MODEL_SIZE=base              # tiny|base|small|medium|large
OLLAMA_MODEL=llama2:7b              # AI model for summarization
OLLAMA_ENABLED=true                  # Enable/disable summarization
OLLAMA_TIMEOUT=30                   # seconds

# HTTPS Configuration (for development)
HTTPS_ENABLED=true                  # Enable HTTPS via nginx
DOMAIN_NAME=localhost               # Domain name for SSL certificate
SSL_EMAIL=admin@yourdomain.com      # Email for Let's Encrypt (production)

# Development settings
ENVIRONMENT=development             # development|production
RELOAD=false
DEBUG=false